<div class="sign-up-page">
  <p>新規アカウント作成</p>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <div class="label-out"><%= f.label "必須", class: "label" %></div>
      <%= f.text_field :name, placeholder: "ユーザー名", autofocus: true, autocomplete: "name", class: "text_field"  %>
    </div>

    <div class="field">
      <div class="label-out"><%= f.label "必須", class: "label" %></div>
      <%= f.email_field :email, placeholder: "メールアドレス", autocomplete: "email", class: "text_field" %>
    </div>

    <div class="field">
      <div class="label-out"><%= f.label "必須", class: "label" %></div>
      <%= f.password_field :password, placeholder: "パスワード(6文字以上)", autocomplete: "new-password", class: "text_field" %>
    </div>

    <div class="field">
      <div class="label-out"><%= f.label "必須", class: "label" %></div>
      <%= f.password_field :password_confirmation, placeholder: "パスワード(確認)", autocomplete: "new-password", class: "text_field" %>
    </div>

    <%= f.submit "新規登録", class: "actions" %>

  <% end %>

    <%= render "devise/shared/links" %>
</div>