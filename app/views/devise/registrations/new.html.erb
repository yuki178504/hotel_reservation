<div class="sign-up-main">
  <div class="sign-up-page">
    <div class="new-acount">
      <div class="new-acount-in">
        <p>新規アカウント作成</p>
      </div>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field-new-out">
        <div class="field">
          <%= f.label "必須", class: "label" %>
          <%= f.text_field :name, placeholder: "ユーザー名", autofocus: true, autocomplete: "name", class: "text_field"  %>
        </div>
      </div>

      <div class="field-new-out">
        <div class="field">
          <%= f.label "必須", class: "label" %>
          <%= f.email_field :email, placeholder: "メールアドレス", autocomplete: "email", class: "text_field" %>
        </div>
      </div>

      <div class="field-new-out">
        <div class="field">
          <%= f.label "必須", class: "label" %>
          <%= f.password_field :password, placeholder: "パスワード(6文字以上)", autocomplete: "new-password", class: "text_field" %>
        </div>
      </div>

      <div class="field-new-out">
        <div class="field">
          <%= f.label "必須", class: "label" %>
          <%= f.password_field :password_confirmation, placeholder: "パスワード(確認)", autocomplete: "new-password", class: "text_field" %>
        </div>
      </div>

      <div class="field-new-out">
        <div class="field">
          <%= f.file_field :image %>
        </div>
      </div>

      <div class="field-new-out">
        <div class="field">
          <%= f.submit "新規登録", class: "actions" %>
        </div>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>