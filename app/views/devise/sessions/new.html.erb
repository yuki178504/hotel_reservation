<div class="sign-up-page">
  <p>ログイン</p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="field">
      <%= f.label "必須", class: "label" %>
      <%= f.email_field :email, placeholder: "メールアドレス", autofocus: true, autocomplete: "email", class: "text_field" %>
    </div>

    <div class="field">
      <%= f.label "必須", class: "label" %>
      <%= f.password_field :password, placeholder: "パスワード", autocomplete: "current-password", class: "text_field" %>
    </div>

    <%= f.submit "ログイン", class: "actions" %>

  <% end %>

  <%= render "devise/shared/links" %>

</div>
