<div class="acount-main">
    <div class="acount">
      <ul class="acount-ul">
        <li class="acount-edit-li"><%= link_to "アカウント", accounts_path, class: "acount-edit-link-1" %></li>
        <li class="acount-edit-li-2"><%= link_to "プロフィール", edit_account_path, class: "acount-edit-link-2" %></li>
      </ul>
    </div>

    <div class="register">
      <div class="field-out room-out">
        <div class="field-in">
          <p class="room-register">アカウント</p>
        </div>
      </div>

    <%= form_with model: @user, url: account_path do |f| %> <!--モデルで保存先を指定して、urlで飛び先を指定する。こうしないと、勝手にcreateメソッドが実行されてしまう-->

      <%= render 'shared/error', obj: @user, class: "alert-out" %>
      
      <div class="field-out">
        <div class="field-in-image">
          <%= image_tag (current_user.image.url), size: '55x55', class: "icon-image" %>
        </div>
      </div>

      <div class="field-out">
        <div class="field-in">
          <%= f.label "ユーザー画像", class: "room" %>
          <%= f.label "必須", class: "label-register" %>
          <%= f.file_field :image, class: "register-text edit-image" %>
        </div>
      </div>
  
      <div class="field-out">
        <div class="field-in">
          <%= f.label "名前", class: "room" %>
          <%= f.label "必須", class: "label-register" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "register-text edit-name" %>
        </div>
      </div>

      <div class="field-out">
        <div class="field-in">
          <%= f.label "自己紹介", class: "room" %>
          <%= f.label "必須", class: "label-register" %>
          <%= f.text_area :introduction, autofocus: true, class: "register-text edit-introduction" %>
        </div>
      </div>
      <div class="field">
        <%= f.submit "更新", class: "actions" %>
      </div>

      <% end %>

  </div>
</div>